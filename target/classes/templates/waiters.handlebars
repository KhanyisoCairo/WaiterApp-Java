        <form action="/add_shift" method="POST">
            <div class="row">
                <div class="col">
                    <div class="mx-auto w-50 p-3 bg-dark-gray text-white text-center">
                        <div class="input-group flex-nowrap">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="addon-wrapping"><img
                                        src="https://img.icons8.com/office/24/000000/waiter.png"></span>
                            </div>
                            <input type="text" name="waiter" value="{{name}}" class="form-control"
                                placeholder="Waiter name" aria-label="Username" aria-describedby="addon-wrapping"
                                required>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-12">
                    <div class="justify-content-center text-center">
                        {{#each days}}
